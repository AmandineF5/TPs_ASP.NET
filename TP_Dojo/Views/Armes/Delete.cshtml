@model TP_Dojo.Models.SamouraiVM

@{
    ViewBag.Title = "Suppression de l'arme";
}

<h2>Supprimer</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Arme</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Arme)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Arme.Nom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Arme.Degats)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Arme.Degats)
        </dd>
        <dt>
            Samouraïs possédant l'arme
        </dt>
        @foreach (var item in Model.ListeSamourais)
        {
            <dd>
                @Html.DisplayFor(modelitem => item.Nom)
            </dd>
        }



    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
