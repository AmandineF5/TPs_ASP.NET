@model TP_Dojo.Models.SamouraiVM

@{
    ViewBag.Title = "Suppression du samouraï";
}

<h2>Supprimer</h2>

<h3>Etes-vous sûr de vouloir supprimer ce samouraï?</h3>
<div>
    <h4>@Html.DisplayFor(model => model.Samourai.Nom)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Samourai.Force)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Samourai.Force)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Samourai.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Samourai.Nom)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Samourai.Arme)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Samourai.Arme.Nom)
        </dd>
        <dt>
            Arts Martiaux
        </dt>
        <dd>
            @if (Model.ListeArtMartials != null)
            {
                foreach (var item in Model.ListeArtMartials)
                {
                    <p>
                        @Html.DisplayFor(modelitem => item.Nom)
                    </p>
                }
            }
            else
            {
                <p>Aucun</p>
            }

        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Samourai.Potentiel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Samourai.Potentiel)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-danger" /> |
            @Html.ActionLink("Retour à la liste", "Index")
        </div>
    }
</div>
